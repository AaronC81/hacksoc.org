<div id="posts">
  <ol class="entries">
    {{#each posts}}
      <li>
        <a href="{{url}}">{{title}}</a>
        <span class="meta">&nbsp;&mdash;&nbsp;{{date}}</span>
        {{#if excerpt}}
            {{{excerpt}}}
        {{else}}
            {{{body}}}
        {{/if}}
      </li>
    {{/each}}
  </ol>
  {{!-- We can add pagination later if required --}}

  {{#if link}}
  <ol class="pages">
      <li><a href="/news.html">More news â–¶</a></li>
  </ol>
  {{/if}}
</div>